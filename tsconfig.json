{
    "compilerOptions": {
        "module": "esNext",
        "target": "es2015",
        "outDir": "dist",
        "jsx": "preserve",
        "moduleResolution": "node",
        "sourceMap": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}